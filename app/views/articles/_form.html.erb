<%= form_with model: @article, local: true do |f| %>
<%#= render 'shared/error_messages', model: f.object %>

  <%# ヘッダー画像 %>
  <div class="img-upload">
    <div class="weight-bold-text">
      ヘッダー画像
      <span class="indispensable">任意</span>
    </div>
    <div class="click-upload">
      <p>
        クリックしてイメージ画像をアップロード
      </p>
      <%= f.file_field :image, id:"item-image" %>
    </div>
  </div>


  <div class="new-items">
    <%# 記事のタイトル %>
    <div class="weight-bold-text">
      記事タイトル
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :title, class:"items-text", id:"item-name", placeholder:"タイトル（必須 100文字まで)" ,rows:"2", maxlength:"100" %>
    <%# 記事の内容 %>
    <div class="items-explain">
      <div class="weight-bold-text">
        記事の内容
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :content, class:"items-text", id:"item-info", placeholder:"コンテンツ" %>
    </div>
  </div>

  <%# 記事のカテゴリー %>
  <div class="items-detail">
    <div class="weight-bold-text">記事のカテゴリー</div>
    <div class="form">
      <div class="weight-bold-text">
        ジャンル
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      <div class="weight-bold-text">
        学校種
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:school_category_id, SchoolCategory.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
  </div>

  <%# 下部ボタン %>
  <div class="sell-btn-contents">
    <%= f.submit "投稿する",class:"sell-btn" %>
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>
  
<% end %>