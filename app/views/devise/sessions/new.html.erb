<%#= render "shared/second_header"%>

<%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h2 class='form-header-text'>
      ログイン
    </h2>
  </div>

  <%#= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true, autocomplete: "email"  %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字", autocomplete: "current-password" %>
  </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class:"check-box" %>
      <%= f.label :remember_me,  "自動入力をオンにする" %>
    </div>
    <% end %>

  <div class='registration'>
    <%= f.submit "ログインする" ,class:"register-btn" %>
  </div>

</div>
<% end %>