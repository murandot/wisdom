<%= render "shared/header" %>

<%# 相談の概要 %>
<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @question.title %>
    </h2>

    <% if current_user == @question.user %>
      <%= link_to "編集", edit_question_path(@question), method: :get, class: "item-red-btn" %>  
      <p class="or-text">or</p>
      <%= link_to "削除", question_path(@question), method: :delete, class:"item-destroy" %>
    <% end %>

    <div class="question-detail">
      <%# 相談の投稿者 %>
      <div class="question-user">
        投稿者：
        <%= link_to @question.user.nickname, user_path(@question.user) %>
        <%= image_tag @question.user.avatar.url, class: 'avatar' %>
      </div>
      <%# 相談のジャンル%>
      <div class="question-genre">
        ジャンル：
        <%= @question.genre.name %>
      </div>
      <%# 相談の学校種%>
      <div class="question-genre">
        学校種：
        <%= @question.school_category.name %>
      </div>
    </div>

    <%# 相談の内容%>
    <div class="item-explain-box">
      内容：
      <span><%= @question.content %></span>
    </div>
    
    <%# いいね欄 %>
    <div class="option">
      <div class="favorite-btn">
        <%= image_tag "card.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
        <span>お気に入り 0</span>
      </div>
      <div class="report-btn">
        <%= image_tag "card.png" ,class:"report-flag-icon" ,width:"20",height:"20"%>
        <span>不適切な教材の通報</span>
      </div>
    </div>
  </div>

  <%# 回答欄 %>
  <div class="answer-box">
    <div class="answer-form">
      <%# 回答投稿フォーム %>        
      <% if user_signed_in? %>
        <%= form_with(model: [@question,@answer],local: true) do |f|%>
          <div class="field">
            <%= f.label :content, "回答する" %><br />
            <%= f.text_field :content, id:"answer_content" %>
          </div>
          <div class="actions">
            <%= f.submit "送信する", class: :form__btn  %>
          </div>
        <% end %>
      <% end %>
    </div>
    <%# 回答一覧表示 %>
    <br>
    <h2>回答</h2>
    <ul class="answer_lists">
      <% @answers.each do |answer| %>
        <li class="answer_list">
          <%= answer.content %>
          <%= link_to answer.user.nickname, user_path(answer.user), class: :answer_user %>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="links">
    <a href="#" class="change-item-btn">
      ＜ 前の質問
    </a>
    <a href="#" class="change-item-btn">
      後ろの質問 ＞
    </a>
  </div>
  <a href="#" class="another-item"><%= @question.genre.name %>をもっと見る</a>
</div>

<%= link_to "戻る", :back %>

<%= render "shared/footer" %>